<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, data: {action: "click->calendar#previousMonth",calendar_target: "previousUrl"} %>
    <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year%></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, data: {action: "click->calendar#nextMonth",calendar_target: "nextUrl"}  %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <%# <tr> %>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day), 
                data: {
                  controller: "selected-days",
                  action: "click->selected-days#select click->calendar#calculPrices",
                  selected_days_target: "day",
                  calendar_target: "day"
                } do %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
            <% end %>
          <% end %>
        <%# </tr> %>
      <% end %>
    </tbody>
  </table>
</div>
