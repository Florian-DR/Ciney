<% content_for :title, "La Ferme d'Auwez" %>
<% content_for :description, "Page d'acceuil des gites et mariages de la Ferme d'Auwez - Ciney" %>

<%###### Introduction Section ######%>
<div id="carousel-container" class="carousel slide carousel-fade" data-bs-ride="carousel slide fade" data-bs-touch="true">
    <% if @home.main_photos.first%>
        <div class="carousel-inner">
            <% @home.main_photos.each_with_index do |photo, index|%>
                <div class="carousel-item  <%= "active" if index == 1%>" data-bs-interval="5000">
                    <%= cl_image_tag photo.key %>
                </div>
            <% end %>
        </div>

        <%# Bootstrap classes for control %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-container" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel-container" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    <% end %>
</div>

<div class="background-gite" style="display: flex; justify-content: space-between;">
    <div style="width: 50%;">
        <%= cl_image_tag @gite_1.photo_principale.key if @gite_1.photo_principale.key%>
    </div>

    <div>
    </div>
</div>

<div class="home contain" >
    <h1 class="section-title"><%= @home.introduction_title %></h1>
    <p><%= simple_format(@home.introduction_text) %></p>

<%###### Gites section ######%>
    <h3 class="section-title"><%= @home.gites_title %></h3>
    <p class="gites-description"><%= simple_format(@home.gites_description)%></p>
    <div class="gites">
        <% @gites.each do |gite| %>
            <%= link_to gite_path(gite) do%>
            <div class="gites-card">
                <h6><%= gite.name %></h6>
                <%= cl_image_tag gite.photo_principale.key if gite.photo_principale.key%> 
                <div>
                    <p class="pictograme"><i class="fa-solid fa-user"></i> <%= gite.capacity %></p>
                    <p class="pictograme"><i class="fa-solid fa-bed"></i> <%= gite.rooms %></p>
                    <p class="pictograme"><i class="fa-solid fa-shower"></i> <%= gite.sanitary %></p>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>


